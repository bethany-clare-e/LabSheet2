<Window x:Class="example3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:example3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Bottom" Text="bottom" Background="HotPink"/>
        <TextBlock DockPanel.Dock="Left" Text="left" Background="Blue"/>
        <TextBlock DockPanel.Dock="Right" Text="right" Background="Yellow"/>
        <TextBlock DockPanel.Dock="Top" Text="top" Background="LimeGreen"/>
        <TextBlock Text="remainder" Background="Gray"/>
    </DockPanel>
</Window>
